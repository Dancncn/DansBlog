---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import MobileDrawer from '../../components/MobileDrawer.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const BASE = import.meta.env.BASE_URL;
const posts = await getCollection('blog');

const tagCount = new Map<string, number>();
for (const post of posts) {
	const tags = post.data.tags ?? [];
	for (const tag of tags) {
		const normalized = tag.trim();
		if (!normalized) continue;
		tagCount.set(normalized, (tagCount.get(normalized) ?? 0) + 1);
	}
}

const sortedTags = [...tagCount.entries()].sort((a, b) => a[0].localeCompare(b[0]));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Tags | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<MobileDrawer />
		<main class="mx-auto max-w-3xl px-4 py-12" transition:name="page-main" transition:animate="fade">
			<h1 class="text-3xl font-semibold tracking-tight text-zinc-900 dark:text-zinc-100 md:text-4xl" transition:name="page-title" transition:animate="fade">Tags</h1>
			<div class="mt-8 flex flex-wrap gap-3">
				{
					sortedTags.map(([tag, count]) => (
						<a
							href={`${BASE}tags/${encodeURIComponent(tag)}/`}
							class="inline-flex items-center gap-2 rounded-xl bg-zinc-100 px-4 py-2 text-sm font-medium text-zinc-700 no-underline transition hover:bg-zinc-200 dark:bg-zinc-900 dark:text-zinc-200 dark:hover:bg-zinc-800"
						>
							<span>{tag}</span>
							<span class="text-zinc-500 dark:text-zinc-400">({count})</span>
						</a>
					))
				}
			</div>
		</main>
		<Footer />
	</body>
</html>

